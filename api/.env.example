# Environment Configuration
NODE_ENV=production

# Server Configuration
PORT=5544

# LiveKit Configuration
LIVEKIT_URL=ws://livekit:7880
LIVEKIT_API_KEY=nests-api-key
LIVEKIT_API_SECRET=nests-super-secret-key-change-in-production

# Redis Configuration
REDIS_URL=redis://redis:6379

# CORS Configuration (comma-separated origins)
CORS_ORIGIN=http://localhost:5173,https://your-domain.com

# Webhook Configuration (optional)
WEBHOOK_SECRET=your-webhook-secret-key

# Recording Configuration (optional)
# AWS_ACCESS_KEY_ID=your-access-key
# AWS_SECRET_ACCESS_KEY=your-secret-key
# AWS_REGION=us-west-2
# S3_BUCKET=your-recordings-bucket

# Monitoring (optional)
# SENTRY_DSN=your-sentry-dsn
# LOG_LEVEL=info

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Security
# JWT_SECRET=your-jwt-secret
# ENCRYPTION_KEY=your-encryption-key